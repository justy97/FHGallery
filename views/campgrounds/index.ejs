<%- include("../partials/header") %>

	<div class="container">
		<header class="jumbotron">
			<div class="container">
				<h1>Welcome to FHfashion</h1>
				<p>Check out the player customizations for all your favorite characters!</p>
			</div>
		</header>

		<div class="row">
			<div class="col-lg-12">
				<p>
					<a class="btn-success btn-lg" href="campgrounds/new">Add New Customization</a>
				</p>
				<h3>Most Popular Fashions</h3>
			</div>
		</div>
		
		<div class="row text-center" style="display:flex;flex-wrap:wrap;">
			<% campgrounds.forEach(function(campground){ %>
				<div class="col-lg-4 col-md3 col-sm-6">
					<div class="thumbnail">
						<img src= " <%= campground.image %> " >
						<div class="caption">
							<h3> <b><%= campground.name %> </b></h3>
							<h4> By: <em><%= campground.author.username %></em> </h4>
						</div>
						<p>
							<a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">View Detail</a>
						</p>
					</div>
				</div>
			<% }); %>
		</div>
		
		
		
	</div>
		

<%- include("../partials/footer") %>