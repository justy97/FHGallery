<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">
			Edit <strong><%= campground.name %></strong>
		</h1>
		<div class="post-form">
			<form action ="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<!--edit name-->
					<input class="form-control title-text" type="text" name="name" value="<%= campground.name %>" placeholder="name (<30 characters)" maxlength="30" required>
				</div>
				
				<div class="form-group">
					<!--edit image-->
                    <label for="image">You can change image:</label>
                    <input type="file" id="image" name="image" accept="image/*" onchange="previewFile(this);">
                    <img id="previewImg" src="<%= campground.image %>" alt="your image" class="image-preview">
                </div>
				
				<div class="form-group">
					<!--edit description-->
					<textarea class="form-control" type="text" name="description" placeholder="Add some description! (<500 characters)" rows="5" cols="50" maxlength="500"><%= campground.description %></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds" class="back-button">Back</a>
		</div>
	</div>	
</div>

<%- include("../partials/footer") %>