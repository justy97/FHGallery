<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Upload your hero customization!</h1>
		<div style="width:30%; margin:25px auto;">
			<form action ="/campgrounds" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" placeholder="name (<30 characters)" maxlength="30" required>
				</div>
				
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
				
				<div class="form-group">
					<textarea class="form-control" type="text" name="campground[description]" placeholder="Add some description! (<500 characters)" rows="5" cols="50" maxlength="500"></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>	
</div>

<%- include("../partials/footer") %>