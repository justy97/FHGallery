<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Upload your customization!</h1>
		<div class="post-form">
			<form action ="/campgrounds" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control title-text" type="text" name="campground[name]" placeholder="name (<30 characters)" maxlength="30" required>
				</div>
				
				<div class="form-group">
					<label for="image">Upload Image:</label>
					<input type="file" id="image" name="image" accept="image/*" onchange="previewFile(this);" required >
					<img id="previewImg" src="#" alt="your image" class="image-preview">
                </div>
				
				<div class="form-group">
					<textarea class="form-control" type="text" name="campground[description]" placeholder="Add some description! (<600 characters)" rows="5" cols="50" maxlength="600"></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
				</div>
			</form>
			<a href="/campgrounds" class="back-button"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>Back</a>
		</div>
	</div>	
</div>

<%- include("../partials/footer") %>